<!-- Movie Collection Form... connects to database -->

@{
    ViewData["Title"] = "Movie Form";
}

<!-- 
    use GOOD NORMALIZATION PRINCIPLES, 
    all records must be entered EXCEPT last 3 in order to create a new record
-->

@model MovieEntry
<div class="align-content-center">
    <h1>New Film to Collection Form</h1>
    <h4 style="font-style:italic">Enter info here : </h4>

    <!-- 
        the massive form that retrieves all users info, verifies to see if they entered the info correctly, and submit button pushes 
        results into sqlite database
    -->
    <br />
    <form method="post">
        <input type="hidden" asp-for="MovieId" />

        <label asp-for="Category">Category</label><br />
        <select asp-for="CategoryId" >
            <option value="">Select a Movie Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>

        <br /><br />
        <label asp-for="Title">Title</label><br />
        <input asp-for="Title" type="text" required /><br />

        <br /><br />
        <label asp-for="Year">Year</label><br />
        <input asp-for="Year" type="text" pattern="\d{4}" title="Please enter a valid 4-digit year" required /><br />
        <span asp-validation-for="Year" class="text-danger"></span>

        <br /><br />
        <label asp-for="Director">Director</label><br /> <!-- normalize here using the select option below (one director) -->
        <input asp-for="Director" type="text" title="Please enter only ONE if there is more than one director" required /><br />
        
        <br /><br />
        <label asp-for="Rating">Rating</label><br />
        <select asp-for="Rating" id="rating" name="rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />
        <span asp-validation-for="Rating" class="text-danger"></span>

        <br /><br />
        <label asp-for="Edited">Edited</label><br />
        <select asp-for="Edited" id="edited" name="edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />
        <span asp-validation-for="Edited" class="text-danger"></span>

        <br /><br />
        <label asp-for="LentTo">Lent To</label><br />
        <input asp-for="LentTo" type="text" /><br />
        <span asp-validation-for="LentTo" class="text-danger"></span>

        <br /><br />
        <label asp-for="CopiedToPlex">Notes</label><br />  <!--Notes should be limited to 25 characters. (#notcoveredinthevideos)-->
        <input asp-for="CopiedToPlex" type="text" /><br />
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>

        <br /><br />

        <button type="submit">Submit Entry</button>
    </form>
</div>
