@{
    ViewData["Title"] = "Movie Data";
}

@model List<MovieEntry>
<h1>Check Out These Recommendations!</h1>

<table class ="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Only One Director?</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>CopiedToPlex</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
             <tr>
                <td>@movie.Category</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.OneDirector</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a></td>
            </tr>  
        }
        
    </tbody>
</table>